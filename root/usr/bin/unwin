#! /bin/bash

running="/run/user/$(id -u)/unwin"
server="${running}/server"
jobs="${running}/jobs"
job="${jobs}/${$}"


mainFunction () {
	trap "cleanUp" ABRT ERR HUP INT QUIT TERM EXIT
	startFramebuffer
	registerJob
	DISPLAY=:99 "${args[@]}"
}


checkArgumentQuantity () {
	if [[ "${#args[@]}" -eq 0 ]]; then
		echo "No command specified" >&2
		echo "Type: unwin COMMAND"
		exit 1
	fi
}


cleanUp () {
	rm --force "${job}"
	
	if dirIsEmpty "${jobs}"; then
		if [[ -f "${server}" ]]; then
			kill -TERM "$(cat "${server}")" || rm --recursive "${running}"
		fi
		
		rm --recursive "${running}"
	fi
}


dirIsEmpty () {
	local dir="${*}"

	[[ -d "${dir}" ]] && [[ -z "$(ls --almost-all "${dir}")" ]]
}


prepareEnvironment () {
	set -eum
	readarray -t args < <(args "${@}")
	checkArgumentQuantity
}


registerJob () {
	mkdir --parents "${jobs}"
	touch "${job}"
}


startFramebuffer () {
	local lock="/tmp/.X99-lock"

	if [[ ! -f "${lock}" ]]; then
		mkdir --parents "${running}"
		Xvfb :99 &
		echo "${!}" > "${server}"
	fi
}


prepareEnvironment "${@}"
mainFunction
